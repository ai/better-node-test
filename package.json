{
  "name": "better-node-test",
  "version": "0.7.1",
  "description": "The CLI shortcut for node --test runner with TypeScript",
  "keywords": [
    "node",
    "test",
    "typescript"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/better-node-test",
  "sideEffects": false,
  "engines": {
    "node": "^18.19.0 || ^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ai"
    }
  ],
  "type": "module",
  "exports": {
    "./package.json": "./package.json"
  },
  "bin": {
    "bnt": "./bin.js"
  },
  "scripts": {
    "test:lint": "eslint .",
    "test:help": "node bin.js --help | node test/find.js Usage",
    "test:only": "node bin.js -t two | node test/find.js 'pass 3'",
    "test:pathless": "node bin.js | node test/find.js 'tests 7'",
    "test:path": "node bin.js test/*.test.js | node test/find.js 'tests 2'",
    "test:env": "node bin.js | node test/find.js 'NODE_ENV=test'",
    "test": "pnpm run /^test:/"
  },
  "devDependencies": {
    "@logux/eslint-config": "^56.1.0",
    "clean-publish": "^5.2.2",
    "eslint": "^9.34.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
